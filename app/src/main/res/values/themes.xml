<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Assignment" parent="android:Theme.Material.Light.NoActionBar">
        <item name="android:statusBarColor">@color/status_bar</item>
        <item name="android:windowBackground">@color/background</item>
    </style>

    <style name="Theme.Assignment.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/background</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_launcher_foreground</item>
        <item name="windowSplashScreenAnimationDuration">1000</item>
        <item name="postSplashScreenTheme">@style/Theme.Assignment</item>
    </style>

</resources>
